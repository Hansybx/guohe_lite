/* pages/core/xs/xs.wxss */

.view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}

.bg {
  width: 100%;
  height: 550rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgb(0, 0, 0);
}

.logo {
  width: 40%;
}

.intro {
  margin-top:30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.intro-text-title {
  font-size: 50rpx;
}

.intro-text-content {
  margin-top: 20rpx;
  font-size: 25rpx;
}


.bottom {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 80rpx;
  margin-top: 100rpx;
  width: 100%;
}

.btns {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
}

.btn-grey {
  background-color: rgb(187, 187, 187);
  color: #FFF;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 150rpx;
  border-radius: 300rpx;
  text-align: center;
  font-size: 25rpx;
  margin-right: 80rpx;
}

.btn-blue {
  color: #FFF;
  background-color: rgb(110, 197, 231);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 150rpx;
  border-radius: 300rpx;
  text-align: center;
  font-size: 25rpx;
  margin-left: 80rpx;
}

.divLine {
  background: #E0E3DA;
  width: 100%;
  height: 2rpx;
}