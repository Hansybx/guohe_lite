.load1 {
  width: 150rpx;
  height: 150rpx;
  animation: myfirst 5s;
  margin: 300rpx auto;
  display: block;
  animation-iteration-count: 100;
  animation-timing-function: linear;
  animation-duration: 1.8s;

}

@keyframes myfirst {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

