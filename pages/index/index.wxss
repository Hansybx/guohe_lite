/**index.wxss**/

.out {
  box-shadow: 0px 0px 10px 5px #aaa;
}

.in {
  box-shadow: 0px 0px 2px 2px rgba(0, 0, 0, 0.2) inset;
}

.toast {
  letter-spacing: 3rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.ad {
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.calendar {
  letter-spacing: 3rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.show {
  display: block;
}

.hide {
  display: none;
}

.box {
  display: flex;
  height: 200rpx;
  margin: 20rpx auto;
  background-color: white;
  width: 100%;
}

.box .item {
  height: 52rpx;
  font-size: 0.8rem;
  color: rgb(49, 49, 49);
}

.box .num {
  line-height: 200rpx;
  text-align: center;
  color: rgb(0, 154, 97);
  flex: 1 0 auto;
  width: 50rpx;
}

.box .right {
  flex: 5 0 auto;
  height: 260rpx;
  display: flex;
  flex-direction: column;
  padding-top: 30rpx;
}

.address {
  flex: 1 0 auto;
  font-size: 0.8rem;
  line-height: 200rpx;
  text-align: center;
  color: #058;
}

page {
  background-color: #f8f8f8;
}

.container {
  padding-bottom: 0;
  background-color: #f0eff5;
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position: bottom center;
  /*background-image: url('/images/index/tri.png');*//*微信暂不支持静态bgimg文件，改用服务器url*/
}

/**功能导航**/

.main-core {
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  padding: 15rpx 10rpx 10rpx;
  min-height: 350rpx;
  overflow: hidden;
}

.main-core-item {
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 20%;
  height: 170rpx;
}

.main-core-item.disabled {
  color: #9c9c9c;
}

.core-item-icon {
  display: block;
  width: 55rpx;
  height: 55rpx;
  margin: 15rpx auto;
}

.core-item-name {
  font-size: 12px;
  display: block;
  margin: 5rpx;
}

.main-swpier {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.main-swpier  image {
  width: 100%;
  height: 100%;
}

/**卡片列表**/

.main-card-item {
  display: flex;
  flex-direction: column;
  background: #fff;
  border-top: 1rpx solid #f6f6ef;
  border-bottom: 1rpx solid #f6f6ef;
  margin-bottom: 20rpx;
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position: bottom center;
  overflow: hidden;
  margin-left: 12rpx;
  margin-right: 12rpx;
  border-radius: 15rpx;
}

.main-card-item navigator {
  display: flex;
  flex-direction: column;
}

page .navigator-hover {
  background-color: rgba(100, 100, 100, 0.1);
  opacity: 0.8;
}

.card-item-hd {
  display: flex;
  align-items: center;
  height: 75rpx;
  border-bottom: 1rpx solid #e5e5e5;
  margin-left: 30rpx;
}

.card-item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.card-item-name {
  letter-spacing: 1px;
  font-size: 25rpx;
}

.card-item-more {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 40rpx;
}

.card-item-bd {
  padding: 20rpx 25rpx 30rpx 0;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}

.card-info-hd {
  display: flex;
  justify-content: space-between;
}

.card-info-name {
  font-size: 16pt;
  line-height: 1.2;
  letter-spacing: 1px;
  color: #acacac;
}

.card-info-number {
  line-height: 175%;
  text-indent: 1px;
  color: #aaa;
}

.main-ending {
  display: none;
  /*display: flex;*/
  align-items: center;
  justify-content: center;
  width: 100%;
  margin-top: 75rpx;
  overflow: hidden;
}

.main-ending-text {
  width: 72pt;
  color: #ccc;
  font-size: 8pt;
  padding: 0 16rpx;
  text-align: center;
  white-space: nowrap;
}

.main-ending-line {
  width: 100%;
  height: 0;
  border-top: 1rpx solid #e5e5e5;
}

/* *今日课表* */

.main-card-item#kb .card-item-bd {
  padding: 0;
  margin-right: 25rpx;
}

.kb-nothing {
  align-items: center;
  justify-content: center;
  font-size: 11pt;
  min-height: 150rpx;
}

.kb-open {
  display: flex;
  font-size: 0.6rem;
  justify-content: center;
  text-align: center;
  color: #ccc;
  margin: 20rpx;
  border-top: 1rpx solid #e5e5e5;
  margin-top: -1rpx;
}

.kb-item {
  display: flex;
  flex-direction: row;
  height: 120rpx;
  align-items: center;
  border-bottom: 1px dotted #e5e5e5;
}

.kb-item-left {
  flex: 0 0 40%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding-right: 25rpx;
  overflow: hidden;
}

.kb-item-when {
  color: #777;
  font-size: 30rpx;
}

.kb-item-right {
  display: flex;
  flex: 0 0 60%;
  flex-direction: column;
  justify-content: flex-start;
}

.kb-item-what {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  -webkit-box-align: start;
  font-size: 25rpx;
  color: #777;
}

.kb-item-where {
  font-size: 25rpx;
  color: #777;
  display: flex;
  justify-content: flex-start;
}
