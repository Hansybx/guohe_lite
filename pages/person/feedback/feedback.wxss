/* pages/core/person/feedback/feedback.wxss */

@import '../../../lib/wxss/weui.wxss';

.logo {
  width: 150rpx;
  height: 150rpx;
  animation: myfirst 5s;
  margin: 40rpx auto;
  display: block;
  animation-iteration-count: 100;
  animation-timing-function: linear;
  animation-duration: 1.8s;
}

.top {
  margin: 25rpx;
  margin-bottom: 100rpx;
  font-size: 30rpx;
  text-align: center;
  color: #778899;
}

.text {
  margin: 25rpx;
  margin-top: 5rpx;
  margin-bottom: 55rpx;
  font-size: 30rpx;
  text-align: left;
  color: #778899;
}

.text_title {
  margin: 30rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
  font-size: 30rpx;
  text-align: left;
}

.card {
  display: flex;
  flex-direction: column;
  background: #fff;
  border-top: 1rpx solid #F6F6EF;
  border-bottom: 1rpx solid #F6F6EF;
  margin-bottom: 20rpx;
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position: bottom center;
  overflow: hidden;
  margin-left: 12rpx;
  margin-right: 12rpx;
  border-radius: 15rpx;
}


page {
  /* background-color: #f8f8f8; */
  background-color: #f8f8f8;
  background-position: center;
  background-size: 100%;
  text-align: center;
}