@import '../../lib/wxss/weui.wxss';

page {
    background: url('https://pic.downk.cc/item/5e43a99b2fb38b8c3ccce686.jpg');
    background-position: center;
    background-size: 100%;
}

.myfooter {
    position: fixed;
    transform: translateX(-50%);
    margin-left: 50%;
    bottom: 20rpx;
    color: #ccc;
}

input {
    color: #fff;
    padding: 0 !important;
    font-size: 1rem;
    border-bottom: 1px solid #ddd;
}

.login-btn {
    margin-top: 60rpx !important;
    background-color: transparent !important;
    width: 40%;
    margin: 0 auto;
    border-bottom: 1px solid #aaa;
    color: #fff !important;
    border-radius: 265rpx;
}

.wrapper {
    width: 100%;
    height: 400rpx;
    position: absolute;
}

.loginform {
    height: 400rpx;
    position: relative;
    top: 200rpx;
}

#owl-login {
    width: 400rpx;
    height: 200rpx;
    position: absolute;
    top: -182rpx;
    left: 50%;
    margin-left: -200rpx;
}

.head {
    width: 400rpx;
    height: 200rpx;
}

.hand {
    width: 68rpx;
    height: 68rpx;
    border-radius: 80rpx;
    background-color: #472d20;
    transform: scaleY(0.6);
    transition: 0.3s ease-out;
    position: absolute;
    left: 25rpx;
    bottom: -16rpx;
}

.hand-r {
    left: 315rpx;
}

.arms {
    top: 120rpx;
    position: absolute;
    width: 100%;
    height: 80rpx;
    overflow: hidden;
}

.arm {
    width: 80rpx;
    height: 130rpx;
    position: absolute;
    left: 40rpx;
    top: 80rpx;
    transition: 0.3s ease-out;
    transform: rotate(-20deg);
}

.arm-r {
    transform: rotate(20deg) scaleX(-1);
    left: 290rpx;
}

.hand-password {
    transform: translateX(95rpx) translateY(-30rpx) scale(0.7);
}

.hand-r-password {
    transform: translateX(-90rpx) translateY(-30rpx) scale(0.7);
}

.arm-password {
    transform: translateY(-80rpx) translateX(80rpx);
}

.arm-r-password {
    transform: translateY(-80rpx) translateX(-72rpx) scaleX(-1);
}

.control-group {
    width: 700rpx;
    height: 400rpx;
    margin: 0 auto;
    padding: 20rpx;
    border-top: 4rpx solid rgba(71, 45, 32, 0.3);
}

.control {
    width: 75%;
    height: 80rpx;
    margin: 20rpx auto;
    padding: 15rpx;
    font-size: 40rpx;
}

button {
    margin-top: 40rpx;
}